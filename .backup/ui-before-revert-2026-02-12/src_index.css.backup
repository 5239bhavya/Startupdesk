@import url('https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Charcoal base with vibrant violet→orchid→coral gradient */
    --background: #26272C;
    --foreground: #F5F5F7;

    --card: #2C2D33;
    --card-foreground: #F5F5F7;

    --surface: #323238;
    --surface-hover: #3D3E45;

    /* Vibrant gradient accent colors */
    --accent-violet: #7C5CFF;
    --accent-orchid: #B76BFF;
    --accent-coral: #FF7A6B;

    --primary: #7C5CFF;
    --primary-foreground: #FFFFFF;

    --secondary: #FF7A6B;
    --secondary-foreground: #FFFFFF;

    --muted: #5A5B61;
    --muted-foreground: #B0B1B7;

    --success: #4ADE80;
    --success-foreground: #000000;

    --warning: #FACC15;
    --warning-foreground: #000000;

    --destructive: #FF3B3B;
    --destructive-foreground: #FFFFFF;

    --border: #3D3E45;
    --input: #323238;
    --ring: #7C5CFF;

    --radius: 1rem;

    /* Premium gradients */
    --gradient-primary: linear-gradient(135deg, #7C5CFF 0%, #B76BFF 50%, #FF7A6B 100%);
    --gradient-accent: linear-gradient(135deg, #7C5CFF 0%, #FF7A6B 100%);
    --gradient-soft: linear-gradient(180deg, #2C2D33 0%, #323238 100%);

    /* Enhanced shadows with purple tint */
    --shadow-sm: 0 2px 4px rgba(124, 92, 255, 0.08);
    --shadow-md: 0 4px 12px rgba(124, 92, 255, 0.12);
    --shadow-lg: 0 12px 32px rgba(124, 92, 255, 0.15);
    --shadow-xl: 0 20px 48px rgba(124, 92, 255, 0.2);
    --shadow-glow: 0 0 24px rgba(124, 92, 255, 0.25);
  }

  .dark {
    --background: #1F2027;
    --foreground: #F5F5F7;

    --card: #26272C;
    --card-foreground: #F5F5F7;

    --surface: #2C2D33;
    --surface-hover: #323238;

    --primary: #8A7CFF;
    --primary-foreground: #1F2027;

    --secondary: #FF8B7B;
    --secondary-foreground: #1F2027;

    --muted: #6B6C72;
    --muted-foreground: #C0C1C7;

    --border: #3D3E45;
    --input: #2C2D33;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground font-sans antialiased;
    font-family: 'Sora', system-ui, sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Space Grotesk', 'Sora', system-ui, sans-serif;
    @apply font-bold tracking-tight;
  }
}

@layer utilities {
  /* Gradient utilities */
  .gradient-primary {
    background: var(--gradient-primary);
  }

  .gradient-accent {
    background: var(--gradient-accent);
  }

  .gradient-soft {
    background: var(--gradient-soft);
  }

  /* Frosted glass effect */
  .glass-frosted {
    @apply backdrop-blur-xl bg-white/10 dark:bg-white/5;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .glass-frosted-elevated {
    @apply backdrop-blur-2xl bg-white/15 dark:bg-white/10;
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  /* Shadow utilities */
  .shadow-glow {
    box-shadow: var(--shadow-glow);
  }

  .shadow-glow-lg {
    box-shadow: 0 0 32px rgba(124, 92, 255, 0.35);
  }

  /* Neon effects */
  .neon-ring {
    @apply ring-2 ring-[#7C5CFF] ring-opacity-50;
  }

  .neon-glow {
    @apply shadow-glow hover:shadow-glow-lg transition-shadow duration-300;
  }

  /* Gradient text */
  .gradient-text {
    @apply bg-gradient-to-r from-[#7C5CFF] via-[#B76BFF] to-[#FF7A6B] bg-clip-text text-transparent;
  }

  /* Soft border radius */
  .rounded-soft {
    @apply rounded-[1.5rem];
  }

  /* Animations */
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .animate-slide-up {
    animation: slideUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-glow-pulse {
    animation: glowPulse 3s ease-in-out infinite;
  }

  /* Cursor reactive background */
  #cursor-reactive-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -1;
  }

  /* Animation delays */
  .animation-delay-0 { animation-delay: 0s; }
  .animation-delay-100 { animation-delay: 0.1s; }
  .animation-delay-200 { animation-delay: 0.2s; }
  .animation-delay-300 { animation-delay: 0.3s; }
  .animation-delay-500 { animation-delay: 0.5s; }
}

/* Professional animations */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) translateX(0px);
  }
  25% {
    transform: translateY(-8px) translateX(4px);
  }
  50% {
    transform: translateY(-12px) translateX(0px);
  }
  75% {
    transform: translateY(-8px) translateX(-4px);
  }
}

@keyframes glowPulse {
  0%, 100% {
    box-shadow: 0 0 24px rgba(124, 92, 255, 0.25);
  }
  50% {
    box-shadow: 0 0 48px rgba(124, 92, 255, 0.45);
  }
}
